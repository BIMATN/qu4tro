<div class="container">
    {{#if quiz_name}}
      <div class="d-flex justify-content-start"> 
        <h1>{{quiz_name}}</h1>
        <h2 class="ml-auto">Quiz ID: {{quizId}}</h2>
      </div>
    {{else}}
        {{#if quizIdError}}<h2 class="text-danger"><b>{{quizIdError}}</b></h2>{{/if}}  
    {{/if}}
   
    {{#if dbQuestion}}
        <div class="row">
         <ol>
            {{#each dbQuestion}}
              <div class="d-flex panel panel-info">
                <div class="panel-heading">
                  <li><h3 class="panel-title">{{this.dataValues.Question}}</h3>
                </div>
                <div class="panel-body">
                  <input type="text" data-answer="{{id}}">
                </div>
                <div class="panel-footer" style="display: none" id="answer-{{id}}"><i>{{this.dataValues.Answer}}</i></div>
              </div>            
            {{/each }}
        </ol>
        </div>
    {{/if}}

</div> <!-- container -->