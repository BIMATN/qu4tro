<div class="container">
    <h1 class="text-center"></h1>
    {{#if survey_name}}
      <div class="d-flex justify-content-start"> 
        <h1>{{survey_name}}</h1>
        <h2 class="ml-auto">{{id}}</h2>
      </div>
    {{else}}
        <h2> Enter survey id given by your administrator </h2>
    {{/if}}
    
    {{#if dbQuestion}}
        <div class="row">
            {{#each dbQuestion}}
              <div class="panel panel-info p-2 d-flex w-100">
                  <div class="d-inline-flex align-items-center">
                    <div class="panel-heading">
                      <h4 class="panel-title">{{this.dataValues.Question}}</h4>                  
                    </div>
                    <div class="panel-body ml-4">
                        {{#if (eq this.dataValues.Category "scale")}}
                              <div id="slidecontainer"> 
                                <input type="range" min="1" max="100" value="5" class="slider" id="myRange" name="Q"+{{id}}>
                              </div>
                        {{/if}}
                        {{#if (eq this.dataValues.Category "yes-no")}}
                          <form action="">
                            <div class="d-inline-flex justify-content-start align-items-center">
                              <input type="radio" name="Q"+{{id}} class="mx-2" value="no"> No<br>
                              <input type="radio" name="Q"+{{id}} class="mx-2" value="yes"> Yes<br>
                            </div>
                          </form>
                        {{/if}} 
                        {{#if (eq this.dataValues.Category "open")}}
                          <form action="">
                            <div class="d-inline-flex justify-content-start">
                              <input type="text" name="Q"+{{id}}>
                            </div>
                          </form>
                        {{/if}}                                                
                    </div> <!-- panel-body -->
                  </div>
              </div> <!-- panel  -->         
            {{/each }}
        </div> <!-- row -->
    {{/if}}

</div> <!-- container -->