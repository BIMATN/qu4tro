<div class="jumbotron mt-4 bg-info">
  <div class="d-flex justify-content-center align-items-center">
    <img class="logo" src = "/assets/img/quatro_logo.png">
  </div>
  <p class="lead text-center">You've got questions, you've got answers</p>
  <hr class="my-4">
</div>

<div class="container">
    <h1 class="text-center"></h1>
    <div class="row">
      <div class="col-md-6 col-lg-6" style="border-right: solid;" >
        <div class="text-center"><h5>Create Quizzes<h5></div>
        <form>
          <div class="form-group">
            
            <div class="d-flex">
              <label for="email"><i class="fa fa-envelope fa-2x mr-2" aria-hidden="true"></i></label>              
              <input type="email" class="form-control" id="email">
              
            </div>
          </div>
          <div class="form-group">
            <div class="d-flex">
              <label for="pwd"><i class="fa fa-key fa-2x mr-2" aria-hidden="true"></i></label>
