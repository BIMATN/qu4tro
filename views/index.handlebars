<div class="container">
    <h1 class="text-center"></h1>
    <div class="row">
      <div class="col-md-6 col-lg-6 w-100" style="border-right: solid;" >
          <div class="card p-3 w-100">        
            <div class="card-title"><h5>Login</h5></div>
            <div class="card-block">
              {{#if loginError}}<div class="d-flex"><p class="text-danger p-2 center-block"><b>{{loginError}}</b></p></div>{{/if}}
              <form id="login" action="/authenticate" method="POST">
                  <div class="input-group">
                    <span class="input-group-addon" id="basic-addon1">@</span>
                    <input type="text" class="form-control" placeholder="Username" aria-describedby="basic-addon1" name="userName" id="userName">
                  </div>

                  <div class="input-group">
                    <span class="input-group-addon" id="basic-addon1">P</span>
                    <input type="password" class="form-control" placeholder="password" aria-describedby="basic-addon1" name="password" id="password">
                  </div>  
                  <div class="d-flex justify-content-center mt-4">     
                    <button type="submit" class="btn btn-primary mx-auto w-25">Login</button>
                    <div class="mx-auto"><a href="/register"><div class="btn btn-secondary">Register</div></a></div>   
                  </div> 
              </form>
            </div>
          </div>
      </div>
      <div class="col-md-6 col-lg-6 d-flex w-100">        
          <div class="card bg-faded p-3 card-inverse w-100">
            <div class="card-title"><h5>Take Quiz<h5></div>
            <div class="card-block">
          <form class="form-inline my-2 my-lg-0" id="takeQuiz" action="/quiz" method="POST">
                  {{#if quizIdError}}<div class="d-flex"><p class="text-danger p-2 center-block"><b>{{quizIdError}}</b></p></div>
                  {{/if}}                
              <div class="input-group">
                <span class="input-group-addon" id="basic-addon1">ID</span>
                <input type="text" class="form-control" placeholder="quiz id" aria-describedby="basic-addon1" id="quizId" name="quizId">
                <input type="hidden" name="pageName" value="quiz">
              </div>    
              <button type="submit" class="btn btn-outline-primary">Enter</button>   
          </form>

            </div>
          </div>              
      </div>
    </div>
</div> <!-- container -->