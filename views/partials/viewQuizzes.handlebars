<div class="container">
  <div class="row">
        <h3 class="text-danger"> Your Quizzes </h3>       
        <div class="card p-4 mb-4 w-100">
            <div class="card-block">
              {{#each quizzes}}
                    <div class="card p-4 mb-4 d-inline-flex justify-content-start">
                        <h4 class="card-title">{{this.dataValues.quiz_name}}</h4>
                        <div class="card-block">
                          <form action="/getQuestions" class="w-100" method="POST">
                            <input type="hidden" name="pageName" value="editQuestions">
                            <input type="hidden" name="id" value="{{this.dataValues.id}}">
                            <button type="submit" class="btn btn-primary w-100">Edit</button>
                          </form>
                          <form action="/" class="w-100"  method="POST">
                            <input type="hidden" name="pageName" value="editQuestions">
                            <input type="hidden" name="id" value="{{this.dataValues.id}}">
                            <button type="submit" class="btn btn-danger w-100">Delete</button> 
                          </form>                 
                        </div>
                    </div> <!-- inside cards -->
              {{/each}} 
            </div> <!-- main card block -->
        </div> <!-- main card -->
  </div> <!-- row -->

</div> <!-- container -->
<script src="/assets/js/viewQuizzes.js"></script>