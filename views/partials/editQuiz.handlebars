<div class="container pull-left">
        <div class="p-4 mb-4 w-100">
                <div class="card p-2">
                    <div class="d-flex justify-content-start">
                            <button type="submit" class="btn btn-outline-primary" 
                            data-toggle="modal" data-target="#modalQuestion" data-quizid={{quizId}} id="addQuestion">Add Questions</button>

                          <form action="/deleteQuiz" method="POST">
                            <input type="hidden" name="userId" value="{{userId}}">
                            <input type="hidden" name="quizId" value="{{quizId}}">
                            <button type="submit" class="btn btn-outline-danger w-100">Delete</button> 
                          </form>   
                          <div class="ml-3">
                            <h4>Quiz ID {{quizId}}:  {{quiz_name}}</h4>
                          </div>                                        
                    </div>
                </div>
        </div>

</div> <!-- container -->
<script src="/assets/js/viewQuizzes.js"></script>