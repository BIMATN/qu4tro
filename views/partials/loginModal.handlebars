<!-- Modal -->
<div class="modal fade" id="loginModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Log into Qu4tro</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">

          <div class="container login">
                    <div class="card p-3 w-100">        
                      <div class="card-block">
                        {{#if loginError}}<div class="d-flex"><p class="text-danger p-2 center-block"><b>{{loginError}}</b></p></div>{{/if}}
                        <form id="login" action="/authenticate" method="POST">
                            <div class="input-group">
                              <span class="input-group-addon" id="basic-addon1">@</span>
                              <input type="text" class="form-control" placeholder="Username" aria-describedby="basic-addon1" name="userName" id="userName">
                            </div>

                            <div class="input-group">
                              <span class="input-group-addon" id="basic-addon1">P</span>
                              <input type="password" class="form-control" placeholder="password" aria-describedby="basic-addon1" name="password" id="password">
                            </div>  
                            <div class="d-flex justify-content-center mt-4">     
                              <button type="submit" class="btn btn-primary mx-auto w-25">Login</button>
                              <div class="mx-auto"><a href="/register"><div class="btn btn-secondary">Register</div></a></div>   
                            </div> 
                        </form>
                      </div>
                    </div>
                </div>
          </div> <!-- container -->
      </div>
    </div>
  </div>
</div>