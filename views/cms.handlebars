</div>
  <div class="row">
    <div class="col-4 mx-auto justify-contents-start">

      <div class="vertical-menu ">
        <a href="/createQuizzes">Create a Quiz</a>
        <form action="/viewQuizzes" method="GET">
          <input name="id" class="userId" value="{{userId}}" type="hidden">
          <a href="/viewQuizzes/{{userID}}" id="viewQuizzes" type="submit">View Quizzes</a>
        </form>
        <a class="disabled">Analyze resutls</a>
      </div>
    </div>
    <div class="col-8 mx-auto justify-contents-start" id="menuContent">
      {{#if viewQuiz}}
        {{#>viewQuizzes }}
        {{/viewQuizzes }}
      {{ else if createQuiz}}
        {{#>createQuizzes }}
        {{/createQuizzes }}
      {{/if}}  
    </div>

  </div>

