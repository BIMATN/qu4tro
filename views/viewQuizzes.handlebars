                        <h4 class="card-title">{{this.dataValues.quiz_name}}</h4>
                        <div class="card-block">
                          <form>
                          <input type="hidden" name="editQuestions">
                          <a href="/questions" class="btn btn-primary" data-quizId = {{this.dataValues.id}} name="{{this.dataValues.id}}">Edit</a>
